use strict;
use warnings;

my $config = SPVM::Builder::Config->new_cpp17(file => __FILE__);

$config->use_resource('Resource::Eigen');

if ($^O eq 'MSWin32') {
  $config->add_static_lib('stdc++', 'winpthread', 'gcc');
}
else {
  $config->add_lib('stdc++');
}

$config->add_ldflag('-pthread');

$config;
